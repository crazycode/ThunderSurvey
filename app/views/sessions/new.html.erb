<div class="span-8 prepend-3"> 
<h3><%= t(:login) %></h3>

<%= form_tag session_path do -%>
<p><%= label_tag 'Email' %><br />
<%= text_field_tag 'email', @email,:size => 30 %></p>

<p><%= label_tag 'password', t(:password) %><br /> 
<%= password_field_tag 'password', nil,:size => 30 %> <%=link_to t(:forgot_password),forget_password_path%></p>

<p>
<%= check_box_tag 'remember_me', '1', @remember_me %> <%= t(:remember_me) %></p>

<p><%= submit_tag t(:login),:class => 'submit' %></p>    
<% end -%>    
</div>     

<div class="span-6 prepend-1 last ">  
    <h3><%= t(:login_with_others) %></h3>
    <p>直接使用第三方帐号登录,我们不记录密码</p>
    <ul class='open_login'>
    <li><%=link_to image_tag("icons/google.gif",:alt => 'Google Logo'), oauth_login_path(:name => 'google') ,:title => 'Login with Google account'%></li>
    </ul>
</div>